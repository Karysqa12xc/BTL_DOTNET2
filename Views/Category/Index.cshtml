@model IEnumerable<BTL_DOTNET2.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Táº¡o Category</h1>

<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-outline-success">
            <i class="fa-solid fa-plus"></i>
        </button>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BgColor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CateName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BgColor)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CateId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CateId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CateId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
