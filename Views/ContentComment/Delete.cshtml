@model BTL_DOTNET2.Models.ContentComment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ContentComment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Paragraph)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Paragraph)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <img class="rounded" src="@Model.Image" style="max-width: 70%; max-height: 70%; object-fit: cover;">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Video)
        </dt>
        <dd class = "col-sm-10">
            <iframe src="@Model.Video" frameborder="0"></iframe>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ContentCommentId" />
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a href="javascript:void(0);" onclick="goBack()">
            <button class="btn btn-outline-primary">
                <i class="fa-solid fa-arrow-left"></i>
            </button>
        </a>
    </form>
</div>
<script>
     function goBack() {
        window.history.back();
    }
</script>