@model BTL_DOTNET2.Models.PostContentViewModel

@{
    ViewData["Title"] = "Create";
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row g-3">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-5">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <label asp-for="Post.CateId" class="control-label"></label>
                <select asp-for="Post.CateId" class="form-control" asp-items="ViewBag.CateId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ContentPost.Paragram" class="control-label"></label>
                <textarea asp-for="ContentPost.Paragram" class="form-control" cols="30" rows="10"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="ImgUrlPost" class="form-label"></label>
                <input asp-for="ImgUrlPost" class="form-control" type="file">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary form-control mt-5" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
