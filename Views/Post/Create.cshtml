@model BTL_DOTNET2.Models.PostCommentContentViewModel

@{
    ViewData["Title"] = "Create";
}
<h1 class="text-center">Tạo bài viết mới</h1>
<div>
    <a asp-action="Index">
        <button type="button" class="btn btn-outline-danger">
            <i class="fa-solid fa-arrow-left"></i>
        </button>
    </a>
</div>
<hr />

<div class="row g-3">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-5">
                <label asp-for="Post.Title" class="control-label">
                    <h4> Tiêu đề: </h4>
                </label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <label asp-for="Post.CateId" class="control-label">
                    <h4>Thể loại: </h4>
                </label>
                <select asp-for="Post.CateId" class="form-control" asp-items="ViewBag.CateId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ContentPost.Paragram" class="control-label">
                    <h4>Nội dung: </h4>
                </label>
                <textarea id="tiny" asp-for="ContentPost.Paragram" class="form-control" cols="30" rows="10"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="ImgUrl" class="form-label">
                    <h4>
                        Chọn ảnh trên thiết bị này: 
                    </h4>
                </label>
                <input asp-for="ImgUrls" multiple id="fileInput" class="form-control" type="file" accept="image/jpeg, image/png, image/jpg">
            </div>
            <div class="mb-3">
                <label asp-for="VideoUrl" class="form-label">
                    <h4>
                        Chọn video trên thiết bị này: 
                    </h4>
                </label>
                <input asp-for="VideoUrls" multiple id="fileInput" class="form-control" type="file">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary form-control mt-5" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

