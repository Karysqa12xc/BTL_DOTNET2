@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Bạn quên mật khẩu?";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-4 rounded-4 d-flex justify-content-center align-items-center">

    <div class="row bg-white border rounded-4 p-3 shadow box-area">
        <div class="col-md-6 rounded-4 p-3">
            <img src="\images\networkimg\Illustration.png" alt="anh">
        </div>
        <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column right-box">
            <form method="post">
                <h2>Nhập email của bạn vào đây.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                        placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Gửi yêu cầu</button>
            </form>
            <div class="text-center mt-3">
                <a asp-page="./Login">
                    Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
