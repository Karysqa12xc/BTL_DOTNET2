@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container mt-4 rounded-4 d-flex justify-content-center align-items-center">
    <div class="row bg-white border rounded-4 p-3 shadow box-area">
        <div class="col-md-6 rounded-4 p-3">
            <img src="\images\networkimg\Illustration.png" alt="anh">
        </div>
        <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column right-box">
            <div class="rounded-4">
                <div>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h2>Tạo tài khoản mới</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">
                                <span>Email</span>
                                <span class="fas fa-envelope"></span>
                            </label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control " autocomplete="new-password"
                                aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">
                                <span>Password</span>
                                <span class="fas fa-lock"></span>
                            </label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating item-group mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                                aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">
                                <span>Confirm Password</span>
                                <span class="fas fa-lock"></span>
                            </label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Đăng ký</button>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Tôi đã có tài
                            khoản</a>
                    </div>
                </div>


            </div>
        </div>

