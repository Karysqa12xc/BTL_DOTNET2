@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container mt-4 rounded-4 d-flex justify-content-center align-items-center">
    <div class="row bg-white border rounded-4 p-3 shadow box-area">
        <div class="col-md-6 rounded-4 p-3">
            <img src="\images\networkimg\Illustration.png" alt="anh">
        </div>
        <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column right-box">
            <section>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"
                    enctype="multipart/form-data">
                    <h2>Tạo tài khoản mới</h2>
                    (<span class="text-danger">*</span>) : không bắt buộc
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                            placeholder="name@example.com" />
                        <label asp-for="Input.Email">
                            <span>Email</span>
                            <span class="fas fa-envelope"></span>
                        </label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Nickname" class="form-control" autocomplete="username"
                            aria-required="true" placeholder="Nick name" />
                        <label asp-for="Input.Nickname">
                            <span>NickName</span>
                            <span class="fa-solid fa-signature"></span>
                            <span class="text-danger">*</span>
                        </label>
                        <span asp-validation-for="Input.Nickname" class="text-danger"></span>
                    </div>
                    <div class="input-group d-flex">
                        <div class="form-floating password-input mb-3 flex-fill">
                            <input id="password" asp-for="Input.Password" class="form-control "
                                autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">
                                <span>Password</span>
                                <span class="fas fa-lock"></span>
                            </label>
                            <div id="toggle" onclick="showHidePass()">
                                <i class="fa-solid fa-eye-slash"></i>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="input-group d-flex">
                        <div class="form-floating item-group flex-fill mb-3">
                            <input id="confirmpassword" asp-for="Input.ConfirmPassword" class="form-control"
                                autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">
                                <span>Confirm Password</span>
                                <span class="fas fa-lock"></span>
                            </label>
                            <div id="toggleconfirm" onclick="showHideConfirmPass()">
                                <i class="fa-solid fa-eye-slash"></i>
                            </div>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="input-group d-flex">
                        <div hidden class="form-floating item-group flex-fill mb-3">
                            <input asp-for="Input.PhotoUrl" class="form-control" aria-required="true"
                                placeholder="Ảnh đại diện" />
                            <label asp-for="Input.PhotoUrl">
                                <span>Ảnh đại diện</span>
                                <i class="fa-regular fa-image"></i>
                            </label>
                        </div>
                        <span asp-validation-for="Input.PhotoUrl" class="text-danger"></span>
                    </div>
                    <div class="input-group d-flex mb-3">
                        <div class="d-flex">
                            <div class="me-2">
                                <input asp-for="Input.AvatarUrl" class="form-control" onchange="chooseFile(this)" aria-required="true" type="file"
                                    id="imageFile" accept="image/jpeg, image/png, image/jpg" />
                            </div>
                            <div>
                                <img id="avatar" height="40px" width="40px"
                                    style="object-fit: cover; border-radius: 50%;" src="/images/avatar/avatar.png" alt="Ảnh">
                            </div>
                            <span class="text-danger">*</span>
                        </div>
                        @* <span asp-validation-for="Input.PhotoUrl" class="text-danger"></span> *@
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Đăng
                        ký</button>
                </form>
            </section>

            <div class="text-center mt-3">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Tôi đã có tài
                    khoản</a>
            </div>

        </div>

